                            <a href="http://www.sumofis.com/terms"
                               style="text-decoration:none;color:#929ead" target="_blank">{{ "string.terms"|trans }}</a>
                              |
                            <a href="{{ project_privacy }}"
                               style="text-decoration:none;color:#929ead" target="_blank">{{ "string.privacy"|trans }}</a>
