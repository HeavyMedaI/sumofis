            <tbody>
            <tr>
                <td>
                    <table width="600" align="center" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                        <tr>
                            <td width="100%" style="text-align:center">


                                <a href="{{ social_facebook }}"
                                   style="text-decoration:none;margin-right:10px" title="{{ project_name }} Facebook"
                                   target="_blank">
                                    <img style="width:50px;min-height:50px"
                                         src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/_assets/img/social/facebook.png') }}"
                                         alt="{{ project_name }} Facebook" class="CToWUd">
                                </a>
                                <a href="{{ social_twitter }}"
                                   style="text-decoration:none;margin-right:10px" title="{{ project_name }} Twitter"
                                   target="_blank">
                                    <img style="width:50px;min-height:50px"
                                         src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/_assets/img/social/twitter.png') }}"
                                         alt="{{ project_name }} Twitter" class="CToWUd">
                                </a>
                                <a href="{{ social_google }}"
                                   style="text-decoration:none;margin-right:10px" title="{{ project_name }} Google+"
                                   target="_blank">
                                    <img style="width:50px;min-height:50px"
                                         src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/_assets/img/social/tumblr.png') }}"
                                         alt="{{ project_name }} Google+" class="CToWUd">
                                </a>
                                <a href="{{ social_youtube }}"
                                   style="text-decoration:none;margin-right:10px" title="{{ project_name }} Youtube"
                                   target="_blank">
                                    <img style="width:50px;min-height:50px"
                                         src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/_assets/img/social/tumblr.png') }}"
                                         alt="{{ project_name }} Youtube" class="CToWUd">
                                </a>
                                <a href="{{ social_instagram }}"
                                   style="text-decoration:none" title="{{ project_name }} Instagram" target="_blank">
                                    <img style="width:50px;min-height:50px"
                                         src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/_assets/img/social/instagram.png') }}"
                                         alt="{{ project_name }} Instagram" class="CToWUd">
                                </a>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <br>
                            </td>
                        </tr>
                        <tr>
                            <td width="100%" style="text-align:center">
