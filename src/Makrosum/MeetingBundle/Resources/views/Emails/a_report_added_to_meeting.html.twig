                                                    <td style="background-color:#287fb8;border-radius:3px;padding:12px 24px">
                                                        <a href="{{ company_url }}"
                                                           style="font-family:'Lato',helvetica,arial,sans-serif;color:#ffffff;text-align:center;text-decoration:none;display:block;font-weight:normal;font-size:17px"
                                                           target="_blank">{{ "string.go_to"|trans({"%to%": company_name}, "notification", language) }}</a>
                                                    </td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
