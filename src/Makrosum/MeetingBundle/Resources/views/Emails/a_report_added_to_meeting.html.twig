        <table width="660" align="center" style="border:1px solid #bfcad2;background-color:#ffffff" border="0"
               cellspacing="0" cellpadding="0">


            <tbody>
            <tr>
                <td>
                    <table width="" align="center" border="0" cellspacing="0" cellpadding="0"
                           style="padding:0px;background-color:#ecf0f1">
                        <tbody>
                        <tr>
                            <td width="100%">
                                <table width="660" align="left" style="border-collapse:collapse" border="0"
                                       cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td width="100%" valign="top" style="text-align:center;padding:20px">
                <span style="font-size:20px;font-weight:bold;font-family:'Lato',helvetica,arial,sans-serif;color:#313131">
                  {{ "string.notification_title"|trans({}, "notification", language) }}
                </span><br>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>

            <tr>
                <td style="border-top:1px solid #ecf0f1">
                    <table width="660" align="center" border="0" cellspacing="0" cellpadding="0" style="padding:20px">
                        <tbody>
                        <tr>
                            <td width="100%">
                                <table width="120" align="left" style="border-collapse:collapse" border="0"
                                       cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td width="100%" style="text-align:center">
                                            <a href="{{ company_url }}"
                                               target="_blank">
                                                <img width="120" height="120" alt="{{ company_name }}" border="0"
                                                     src="{{ base_hostname }}{{ asset('bundles/Makrosum/Meeting/Logo/' ~ company_logo) }}"
                                                     style="border-radius:0px" class="CToWUd">
                                            </a></td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table width="1" align="left" border="0" cellpadding="0" cellspacing="0">
